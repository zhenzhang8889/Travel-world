.edit_profile.sign_up_steps
  .container
    = render :partial => 'account/sign_up_steps', :locals => {:step => 1}

    %h2 Sign up
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f|
      / = devise_error_messages!

      .control-group
        = f.label :email, :class => 'control-label'
        .controls
          = f.email_field :email, :class => 'input-xlarge', :type => "email", :required => 'required'

      .control-group
        = f.label :email_confirmation, :class => 'control-label'
        .controls
          = f.email_field :email_confirmation, :class => 'input-xlarge', :type => "email", :required => 'required'

      .control-group
        = f.label :password, :class => 'control-label'
        .controls
          = f.password_field :password, :class => 'input-xlarge', :type => "password"

      .control-group
        = f.label :password_confirmation, :class => 'control-label'
        .controls
          = f.password_field :password_confirmation, :class => 'input-xlarge', :type => "password"

      .control-group
        = f.label :firstName, :class => 'control-label'
        .controls
          = f.text_field :firstName, :class => 'input-xlarge', :type => "text"

      .control-group
        = f.label :lastName, :class => 'control-label'
        .controls
          = f.text_field :lastName, :class => 'input-xlarge', :type => "text"

      / .control-group
      /   = f.label :category_id, :class => 'control-label'
      /   .controls
      /     = f.collection_select(:category_id, Category.all, :id, :name)

      .form-actions
        = f.submit "Next", :class => 'btn btn-primary', :disable_with => 'Submitting...'

