<div class="box-color">

  <%= form_for(@level2_admin_user,
    :url => "/admin/level2_admins/#{@level2_admin_user.id}") do |f| %>
    <% if @level2_admin_user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@level2_admin_user.errors.count, "error") %> prohibited this level2_admin_user from being saved:</h2>

        <ul>
          <% @level2_admin_user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="box-float-left">
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :firstName %>
        <%= f.text_field :firstName %>
      </div>
      <div class="field">
        <%= f.label :lastName %>
        <%= f.text_field :lastName %>
      </div>

      <% if params[:action] == "edit" or params[:action] == "update" %>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>
      <% end %>
      
      <div class="field">
        <%= f.check_box :active %>
        <%= f.label :active, "Enabled" %>
      </div>
    </div>

  </div>
  <div class="box-float-left">
    <div class="field">
      <%= f.label :country %>
      <%= f.text_field :country %>
    </div>
    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, :rows => 8, :cols => 80 %>
    </div>

  </div>

  <div class="clear"></div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
