<h1>Listing Category Badges</h1>

<table class="table table-bordered table-hover user_list">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @category_badges.each do |category_badge| %>
  <tr>
    <td><%= category_badge.name %></td>
    <td><%= link_to 'Edit', edit_admin_category_badge_path(category_badge) %>
        <%= link_to 'Destroy', [:admin, category_badge], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category badge', new_admin_category_badge_path %>
