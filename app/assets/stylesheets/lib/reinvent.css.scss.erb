dl.dropdown dd, dl.dropdown dt, dl.dropdown ul { 
  margin: 0px;
  padding: 0px;
}
dl.dropdown dd {
  position:relative;
  z-index: 99;
  ul {
    max-height: 300px;
    overflow: hidden;
    overflow-y:auto;
  }
}
dl.dropdown a, dl.dropdown a:visited { 
  color:#999999; text-decoration:none; outline:none;
}

dl.dropdown a:hover {
  color:#7e7e7e;
}
dl.dropdown dt a:hover {
  color: #7e7e7e;
  border: 1px solid #dfdfdf;
}

dl.dropdown {
  a {
    padding: 5px;
  }
  font-size: 15px;
}

dl.dropdown dt a {
  background: #f7f6f6 url(<%= asset_path('lib/reinvent-arrow.png') %>) no-repeat scroll right center;

  -webkit-box-shadow: inset 0px 1px 3px #bbb;
  -moz-box-shadow: inset 0px 1px 3px #bbb;
  box-shadow: inset 0px 1px 3px #bbb;

  display: block; 
  padding-right: 20px;
  border: 1px solid #cccccc;
  color: #999999;
  span.prompt {
    color: #9999a3;
    font-weight: normal;  
  }

  font-weight: normal;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;

  &.cross {
    background: #f7f6f6 url(<%= asset_path('lib/reinvent-cross.png') %>) no-repeat scroll right center;

    -webkit-box-shadow: 0 0 0 #000;
    -moz-box-shadow: 0 0 0 #000;
    box-shadow: none;

    border: 1px solid #46abd7;
    color: #46abd7;
  }
}
dl.dropdown dt a span {
  cursor:pointer; 
  display:block;
}
dl.dropdown dd ul { 
  background: #f7f6f6 none repeat scroll 0 0;
  border: 1px solid #dfdfdf;
  
  color: #cccaca;

  display: none;
  left: 0px;
  padding: 5px 0px;
  position: absolute;
  top: 2px;
  width: auto;
  //min-width: 170px;
  list-style: none;
}

dl.dropdown span.value { 
  display:none;
}
dl.dropdown dd ul li a { 
  padding: 5px;
  padding-right: 20px;
  display:block;
}
dl.dropdown dd ul li a:hover {
  background-color: #dedcdc;
}

dl.dropdown dd ul li span {
  display: block;
  text-align: center;
}

dl.dropdown img.flag {
  border:none;
  vertical-align:middle;
  margin-left:10px;
}

select.reinvent-select {
  display: none;
}

dl.dropdown {
  margin-top: 0;
  margin-bottom: 0;
}